<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.CTwins"
        tools:targetApi="31" >

        <meta-data
            android:name="BuguAppId"
            android:value="${BuguAppId}" />
        <meta-data
            android:name="BuguAppKey"
            android:value="${BuguAppKey}" />

        <activity
            android:name=".ui.debug.DebugActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.device.profile.ble.BleActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
        </activity>
        <activity
            android:name=".ui.device.DeviceActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
        </activity>
        <activity
            android:name=".ui.device.DeviceActivity2"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
        </activity>
        <activity
            android:name=".ui.device.profile.log.LogActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
        </activity>
        <activity
            android:name=".ui.device.profile.setting.SettingActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
        </activity>
        <activity
            android:name=".ui.debug.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CTwins" >
        </activity>
        <activity android:name=".ui.debug.CarouselHelperActivity" />
        <activity android:name=".ui.debug.CircularFlowDemoActivity" />
    </application>

</manifest>